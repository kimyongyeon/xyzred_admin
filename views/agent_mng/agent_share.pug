extends ../header

block content
    // page content
    .right_col(role='main')
        div
            .page-title
                .title_left
                    h3= title
                .title_right
                    .col-md-5.col-sm-5.col-xs-12.form-group.pull-right.top_search
                        .input-group
                            input.form-control(type='text', placeholder='Search for...')
                            span.input-group-btn
                                button.btn.btn-default(type='button') Go!
            .clearfix
            .row
                // form input mask
                .col-md-6.col-sm-12.col-xs-12
                    .x_content
                        br
                        form.form-horizontal.form-label-left
                            .form-group
                                label.control-label.col-md-3.col-sm-3.col-xs-3 Date Mask
                                .col-md-9.col-sm-9.col-xs-9
                                    input.form-control(type='text', data-inputmask="'mask': '99/99/9999'")
                                    span.fa.fa-user.form-control-feedback.right(aria-hidden='true')
                            .form-group
                                label.control-label.col-md-3.col-sm-3.col-xs-3 Phone mask
                                .col-md-9.col-sm-9.col-xs-9
                                    input.form-control(type='text', data-inputmask="'mask' : '(999) 999-9999'")
                                    span.fa.fa-user.form-control-feedback.right(aria-hidden='true')
                            .form-group
                                label.control-label.col-md-3.col-sm-3.col-xs-3 Custom Mask
                                .col-md-9.col-sm-9.col-xs-9
                                    input.form-control(type='text', data-inputmask="'mask': '99-999999'")
                                    span.fa.fa-user.form-control-feedback.right(aria-hidden='true')
                            .form-group
                                label.control-label.col-md-3.col-sm-3.col-xs-3 Serial Number
                                .col-md-9.col-sm-9.col-xs-9
                                    input.form-control(type='text', data-inputmask="'mask' : '****-****-****-****-****-***'")
                                    span.fa.fa-user.form-control-feedback.right(aria-hidden='true')
                            .form-group
                                label.control-label.col-md-3.col-sm-3.col-xs-3 TaxID Mask
                                .col-md-9.col-sm-9.col-xs-9
                                    input.form-control(type='text', data-inputmask="'mask' : '99-99999999'")
                                    span.fa.fa-user.form-control-feedback.right(aria-hidden='true')
                            .form-group
                                label.control-label.col-md-3.col-sm-3.col-xs-3 Credit Card Mask
                                .col-md-9.col-sm-9.col-xs-9
                                    input.form-control(type='text', data-inputmask="'mask' : '9999-9999-9999-9999'")
                                    span.fa.fa-user.form-control-feedback.right(aria-hidden='true')
                            .ln_solid
                            .form-group
                                .col-md-9.col-md-offset-3
                                    button.btn.btn-primary(type='submit') Cancel
                                    button.btn.btn-success(type='submit') Submit
                    // /form input mask
